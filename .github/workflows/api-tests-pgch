  api-tests-pgch:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Detect pgch tests
        id: detect
        run: |
          if ls app/tests/test_api_pgch*.py 1> /dev/null 2>&1; then
            echo "has_tests=true" >> $GITHUB_ENV
          else
            echo "has_tests=false" >> $GITHUB_ENV
          fi

      - name: Set up Python
        if: env.has_tests == 'true'
        uses: actions/setup-python@v4
        with:
          python-version: "3.11"

      - name: Install dependencies
        if: env.has_tests == 'true'
        run: |
          pip install -r app/backend/requirements.txt
          pip install pytest

      - name: Run API tests (Postgres + ClickHouse)
        if: env.has_tests == 'true'
        run: pytest -q app/tests/test_api_pgch*.py -s --basetemp=tests_output
